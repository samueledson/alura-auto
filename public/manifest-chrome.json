{
  "manifest_version": 3,
  "name": "Alura Auto",
  "version": "0.1.0",
  "description": "Extens√£o de navegador para automatizar e facilitar assistir as aulas na plataforma Alura Cursos",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "Alura Auto",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://cursos.alura.com.br/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://cursos.alura.com.br/course/*/task/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}